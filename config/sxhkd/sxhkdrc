#################################################################
# WM INDEPENDENT HOTKEYS
#################################################################

# Launch Terminal
super + Return
    kitty

# Launch kitty terminal floating
super + shift + t
     ~/.config/bspwm/scripts/floating-term-bspwm.sh

# program launcher
super + d
    rofi -show drun
    
# program launcher rofi beats
super + b
     ~/.config/rofi/Rofi-Beats/rofi-beats-linux

# rofi network manager
super + n
     networkmanager_dmenu &
           
    
# program launcher rofi dmenu
super + r
    rofi -show drun  -theme ~/.config/rofi/dmenu/d-nord.rasi -font "DejaVu Sans:style=Regular:pixelsize=13;2" -show com

# program launcher
ctrl + super + r
    rofi -show run
    
# Launch rofi powermenu
super + {x}
    {$HOME/.config/rofi/powermenu/powermenu.sh}


# Launch Applications 
super + {a,o,t,v} 
    {archlinux-betterlockscreen,virtualbox,thunar,variety}  

# Launch Applications
super + shift + {d,f,w,b,c,p,r,h,g,m,n,s,v}
    {dolphin,firefox,whatsapp-for-linux,brave,chromium,pamac-manager,kitty -e ranger,kitty -e htop,geany,vlc,nitrogen,xfce4-settings-manager,vivaldi-snapshot}

